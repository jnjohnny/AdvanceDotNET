@model practice17._02._22.Models.Student
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Loggedin.cshtml";
}

@if (Model != null) 
{ 
    <h1>@Model.Name</h1>
}


<h2>Create</h2>

<form action="" method="POST">
    <input type="text" name="Name" value="@Model.Name" placeholder="Name" class="form-control" />
    @Html.ValidationMessageFor(model=>model.Name,"",new { @class="text-danger"})
    <input type="text" name="Id" placeholder="Id" class="form-control" />
    <input type="text" name="Dob" placeholder="Date of Birth" class="form-control" />
    <input type="text" name="Email" placeholder="Email" class="form-control" />
    <input type="submit" value="Submit" />

</form>

